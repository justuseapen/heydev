{
  "name": "heydev",
  "version": "0.1.0",
  "description": "A drop-in JavaScript widget for frictionless user feedback with voice input and multi-channel developer notifications",
  "private": true,
  "type": "module",
  "workspaces": [
    "widget",
    "server",
    "dashboard"
  ],
  "scripts": {
    "typecheck": "tsc -b",
    "typecheck:widget": "npm run typecheck -w widget",
    "typecheck:server": "npm run typecheck -w server",
    "typecheck:dashboard": "npm run typecheck -w dashboard",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
